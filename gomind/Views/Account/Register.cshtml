@model IdentitySample.Models.RegisterViewModel
<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
<link href="~/Content/register.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" media="screen" />
<div class="container">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-4"></div>
            <div class="col-md-4 col-sm-4 col-xs-4">
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/img/logo.jpg" class="img-responsive" />
                </a>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-4"></div>
        </div>
    </div>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="omb_login">
            <h3 class="omb_authTitle">Sign up or <a href="@Url.Action("Login","Account")">Login</a></h3>
            <div class="row omb_row-sm-offset-3">
                <div class="col-xs-12 col-sm-6">
                    <form class="omb_loginForm" action="" autocomplete="off" method="POST">
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-envelope"></i></span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "信箱", aria_describedby = "sizing-addon1", id = "txtemail" })

                        </div>
                        <br />
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-envelope"></i></span>
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "暱稱", aria_describedby = "sizing-addon1", id = "txtname" })

                        </div>
                        <br />
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "密碼", aria_describedby = "sizing-addon1" })

                        </div>

                        <br />
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon" id="sizing-addon1"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "確認密碼", aria_describedby = "sizing-addon1" })

                        </div>

                        <br />
                     
                        <br />
                        <button class="btn btn-lg btn-primary btn-block" type="submit" id="btnconnect">Sign Up</button>
                    </form>

                </div>

            </div>

        </div>

    }


</div>