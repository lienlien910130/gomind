    <script type="text/javascript">
    function OnSuccess(data) {
        $("#message").val("");
    }
    $(document).ready(function () {
            var refreshId = setInterval(
                "updateChatArea()",
                1000);
            $('#newmessage_messagebody').keydown(function (e) {
                if (e.keyCode == 13) {
                    e.preventDefault();
                    $("#newmessage_sendbutton").click();
                }
            });
    });
    function updateChatArea() {
            $.getJSON(
               "/Chats/GetMessages/",
                {id:@Model.Chat.ID },
                function (data) {
                    $("#chatarea").html("");
                    var x;
                    if (data.length > 0 ) {
                        for (x in data) {
                             $("#chatarea").html(
                             $("#chatarea").html() + 
                             "<div class='col-lg-12 pull-left' style='text-align:left'><p><b>" +
                             data[x].Username + "</b> <i>(" +
                             data[x].PostDateTime + ")</i><br/>" +
                             data[x].MessageBody +"</p></div>");
                        }
                    }
                    else {
                        $("#chatarea").html("<p>No Messages</p>");
                    }
                });
            $("#message").html("");
        }
        function sendNewMessage() {
            $.post(
                "/Chats/AddMessage",
                {
                    Id:@Model.Chat.ID ,
                    MessageBody: $("#newmessage_messagebody").val()
                });
            $("#newmessage_messagebody").val("");
            updateChatArea();
        }
    </script>
