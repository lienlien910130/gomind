@model IdentitySample.Models.VerifyPhoneNumberViewModel

@using (Ajax.BeginForm("VerifyPhoneNumber", "Manage", new { @class = "form-horizontal", role = "form" }, new AjaxOptions { UpdateTargetId = "changediv", InsertionMode = InsertionMode.Replace, HttpMethod = "Post" }))
{
    <div id="changediv">
        @Html.AntiForgeryToken()
        @Html.Hidden("phoneNumber", @Model.PhoneNumber)

        <h5>@ViewBag.Status</h5>

        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Code, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
            </div>
        </div>
        <br /><br />
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="確認" />
            </div>
        </div>
    </div>
}


@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jqueryajax")







