
@model IEnumerable<gomind.Models.FollowTable>


@foreach (var item in Model)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            @if (item.ProductList.url != "" || item.ProductList.url != null)
            {
                <img src="~/img/@item.ProductList.url" alt="" style="width:320px;height:150px">
            }
            <div class="caption">
                <h4 class="pull-right">$ @item.ProductList.prodlist_price </h4>
                <h4>@Html.ActionLink(item.ProductList.prodlist_name, "Details", "ProductLists", new { id = item.number }, null)</h4>
                <p class="pull-right"><i class="fa fa-heart" aria-hidden="true"></i> @item.ProductList.prodlist_followtimes</p>
            </div>
        </div>
    </div>
}



