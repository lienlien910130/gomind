@model IEnumerable<gomind.Models.FollowTable>


@foreach (var item in Model)
{
    <div class="col-sm-4 col-lg-4 col-md-4"  style="font-family:'Microsoft JhengHei UI','Microsoft JhengHei';font-size:larger">
        <div class="thumbnail">
            @if (item.ProductList.url != "" || item.ProductList.url != null)
            {
                <a href="@Url.Action("Details","ProductLists", new { id = item.ProductList.number })">
                    <img src="/Files/GetPImage?id=@item.ProductList.number" alt="" style="height:300px">
                </a>
            }
            <div class="caption">
                <h4 class="pull-right">$ @item.ProductList.prodlist_price </h4>
                <h4>@Html.ActionLink(item.ProductList.prodlist_name, "Details", "ProductLists",  new { id = item.ProductList.number } , null)</h4>
                <p class="pull-right"><i class="fa fa-heart" aria-hidden="true"></i> @item.ProductList.prodlist_followtimes</p>
            </div>
        </div>
    </div>
}




