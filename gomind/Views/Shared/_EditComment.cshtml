@model gomind.Models.Comment_Member

<script src="~/Scripts/_Comment.js"></script>

<div class="form-horizontal" style="font-family:'Microsoft JhengHei UI','Microsoft JhengHei';font-size:larger">
  @using (Ajax.BeginForm("Edit", "Comment_Member", new { id = Model.id} , new AjaxOptions {UpdateTargetId="big",InsertionMode=InsertionMode.Replace,HttpMethod="Post" }))
  {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-10">
                <div class="row lead">
                    <div id="stars" class="starrr col-md-3"></div>
                    <input type="text" id="count" name="count" style="width:50px;text-align:center" value='@Model.score'/>
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ccont, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ccont, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ccont, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="儲存" class="btn btn-default" />
            </div>
        </div>
  }
  @using (Ajax.BeginForm("CommEditCancel", "Comment_Member", null, new AjaxOptions { UpdateTargetId = "big", InsertionMode = InsertionMode.Replace, HttpMethod = "Get" }))
  {
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="取消" class="btn btn-default" />
                </div>
            </div>
  }
    </div>
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jqueryajax")




