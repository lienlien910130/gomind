@model IEnumerable<gomind.Models.UserData>

<script src="~/Scripts/SalerCommentEdit.js"></script>


@using (Ajax.BeginForm("SalerIndex", "UserDatas", new AjaxOptions { UpdateTargetId = "tes", InsertionMode = InsertionMode.Replace, HttpMethod = "Get" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group pull-right">
        <div>
            <input type="submit" value="取消" class="btn btn-default" />
        </div>
    </div>
}

@using (Ajax.BeginForm("SalerEdit", "UserDatas", new AjaxOptions { UpdateTargetId = "tes", InsertionMode = InsertionMode.Replace, HttpMethod = "Post" }))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group pull-right">
        <div>
            <input type="submit" value="儲存" class="btn btn-default" />
        </div>
    </div>
    
    <textarea class="form-control" rows="3" style="text-align:center;font-size:xx-large;" name="message" id="message">
     </textarea>

}




@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jqueryajax")
