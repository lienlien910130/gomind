@model gomind.Models.Comment_Member


<script src="~/Scripts/_Comment.js"></script>

<div class="form-horizontal">
    @using (Html.BeginForm("Createto", "Comment_Member", FormMethod.Post, new { id = Model.touserid, oid = Model.Order.id }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.touserid)
        @Html.HiddenFor(m => m.Order.id)

        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-10">
                <div class="row lead">
                    <div id="stars" class="starrr col-md-3"></div>
                    <input type="text" id="count" name="count" style="width:50px;text-align:center" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">內容</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ccont, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ccont, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="新增評論" class="btn btn-default" onclick="sendNewMessage()" />
            </div>
        </div>

    }
    @using (Ajax.BeginForm("BuyCancel", "Comment_Member", null, new AjaxOptions { UpdateTargetId = "order", InsertionMode = InsertionMode.Replace, HttpMethod = "Get" }))
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="取消" class="btn btn-default" />
            </div>
        </div>
    }
</div>
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jqueryajax")


