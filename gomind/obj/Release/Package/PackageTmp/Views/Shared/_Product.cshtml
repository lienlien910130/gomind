@model IEnumerable<gomind.Models.ProductList>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="project">
                <figure class="img-responsive">
                  @if (item.url != "" || item.url != null)
                  {
                    <a href="@Url.Action("Details","ProductLists", new { id = item.number })">
                        <img src="/Files/GetPImage?id=@item.number" alt="" style="height:300px">
                    </a>
                  }
                        <figcaption>
                            <span class="project-details">@Html.ActionLink(item.prodlist_name, "Details", "ProductLists", new { id = item.number }, null)</span>
                            <span class="project-price"><strong>$ @item.prodlist_price </strong></span>
                            <span class="project-creator"><i class="fa fa-heart" aria-hidden="true" style="color:lightpink"></i> @item.prodlist_followtimes</span>
                        </figcaption>

                </figure>
            </div>
        </div>
    }
</div>

